<div class="page-header">
  <h4>文章详情</h4>
</div>

<dl class="dl-horizontal">
  <dt><strong>名称:</strong></dt>
  <dd><%= @article.name %></dd>
  <dt><strong>内容:</strong></dt>
  <dd><%=raw @article.content %></dd>
</dl>

<%= link_to '文章列表',articles_path, :class => 'btn btn-default'  %>
<%= link_to '编辑',edit_article_path(@article), :class => 'btn btn-default' %>
<%= link_to '删除',article_path(@article),:method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
